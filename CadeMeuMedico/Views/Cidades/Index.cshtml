@model IEnumerable<CadeMeuMedico.Models.Cidade>

@{
    ViewBag.Title = "Cidade";
}

<h2>Lista de Cidades</h2>

<p>
    @if (User.Identity.IsAuthenticated) {
        @Html.ActionLink("Adicionar Cidade", "Create", new { @class = "btn btn-danger" })
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>   
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        @if (User.Identity.IsAuthenticated) {
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CidadeID }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.CidadeID }, new { @class = "btn btn-danger" })
            </td>
        }
        </tr>
}

</table>
