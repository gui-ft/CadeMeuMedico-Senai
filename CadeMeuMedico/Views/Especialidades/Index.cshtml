@model IEnumerable<CadeMeuMedico.Models.Especialidade>

@{
    ViewBag.Title = "Especialidade";
}

<h2>Especialidade</h2>

<p>
    @if (User.Identity.IsAuthenticated) {
        @Html.ActionLink("Adicionar Especialidade", "Create")
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        @if (User.Identity.IsAuthenticated) {
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.EspecialidadeID }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.EspecialidadeID })
            </td>
        }
        </tr>
}

</table>
